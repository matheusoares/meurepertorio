<form action="/inserirBanda" class="grid" method="post" style="padding:0 35px;">
  <div class="form-group">
    <label for="bandName">Nome da banda</label>
    <input type="text" class="form-control" name="name" id="bandName" placeholder="exemplo: Sertanejos">
    <input type="hidden" name="idUsuario" value="<%=req.req.session._id%>">
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="status" id="ativoStatus1" value="1" checked="checked">
    <label class="form-check-label" for="ativoStatus1">Ativa</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="status" id="ativoStatus2" value="0">
    <label class="form-check-label" for="ativoStatus2">Inativa</label>
  </div>
  <button type="submit" class="btn btn-lg btn-primary" >Salvar</button>

</form>